{
  "name": "@lemma/http",
  "version": "0.0.1",
  "description": "HTTP server for Lemma",
  "author": "inhibitor <inhibitor@kaist.ac.kr>",
  "private": true,
  "packageManager": "yarn@3.2.2",
  "scripts": {
    "check:typescript": "tsc --noEmit",
    "start:dev": "yarn ts-node -r tsconfig-paths/register --transpileOnly src/main.ts | yarn pino-pretty",
    "watch:dev": "nodemon --watch ./src -e ts --exec \"yarn start:dev\""
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.8",
    "@types/node-fetch": "^2.6.2",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@fastify/cookie": "^8.0.0",
    "@fastify/session": "^9.0.0",
    "@lemma/prisma-client": "workspace:^",
    "dotenv": "^16.0.1",
    "extended-enum": "^1.0.1",
    "fastify": "^4.5.2",
    "fastify-plugin": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.7"
  }
}
